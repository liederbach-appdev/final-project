<h1>
  Edit meal #<%= @meal.id %>
</h1>

<hr>

<%= render("meal_templates/validation_failures.html.erb") %>

<form action="/update_meal_record/<%= @meal.id %>" method="post">
  <div>
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" value="<%= @meal.name %>">
  </div>

  <div>
    <label for="restaurant_id">
      Restaurant
    </label>

    <input type="text" id="restaurant_id" name="restaurant_id" value="<%= @meal.restaurant_id %>">
  </div>

  <div>
    <label for="image_url">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" value="<%= @meal.image_url %>">
  </div>

  <button>
    Update meal
  </button>
</form>

<hr>

<a href="/meals">
  Go back
</a>
