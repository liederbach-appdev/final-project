<h1>
  Edit  <%= @restaurant.name %>
</h1>

<hr>

<%= render("restaurant_templates/validation_failures.html.erb") %>

<form action="/update_restaurant_record/<%= @restaurant.id %>" method="post">
  <div>
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" value="<%= @restaurant.name %>">
  </div>

  <div>
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" value="<%= @restaurant.address %>">
  </div>

  <div>
    <label for="image_url">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" value="<%= @restaurant.image_url %>">
  </div>

  <div>
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" value="<%= @restaurant.description %>">
  </div>


  <div>
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" value="<%= @restaurant.rating %>">
  </div>

  <div>
    <label for="cuisine">
      Cuisine
    </label>

    <input type="text" id="cuisine" name="cuisine" value="<%= @restaurant.cuisine %>">
  </div>

  <button>
    Update restaurant
  </button>
</form>

<hr>

<a href="/restaurants">
  Go back
</a>
